---
import Layout from "../layouts/Layout.astro"
---

<Layout title="astro-api">
  <main class="max-w-5xl mx-auto px-4 py-10 space-y-6" id="app">
    <header class="space-y-2">
      <p class="uppercase tracking-[0.14em] text-sm font-semibold text-[#edb641]">Litestar · Vite</p>
      <h1 class="text-3xl font-semibold text-[#202235]">Library (Astro)</h1>
      <p class="text-slate-600">Astro consuming the shared Litestar API.</p>
      <div class="inline-flex gap-2 bg-slate-100 rounded-full p-1 shadow-sm" role="tablist">
        <button
          class="px-4 py-2 rounded-full text-sm font-semibold transition bg-white shadow text-[#202235]"
          data-view="overview"
          type="button"
        >Overview</button>
        <button
          class="px-4 py-2 rounded-full text-sm font-semibold transition text-slate-600"
          data-view="books"
          type="button"
        >Books</button>
      </div>
    </header>

    <section id="overview" class="bg-white border border-slate-200 rounded-2xl p-6 shadow-lg shadow-slate-200/40 space-y-3 hidden"></section>
    <section id="books" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 hidden" aria-label="Books"></section>
  </main>
</Layout>

<script>
  const tabButtons = document.querySelectorAll('[data-view]')
  const overview = document.getElementById('overview')
  const books = document.getElementById('books')

  async function loadData() {
    const [summaryRes, booksRes] = await Promise.all([
      fetch('/api/summary'),
      fetch('/api/books'),
    ])
    const summary = await summaryRes.json()
    const bookList = await booksRes.json()

    overview.innerHTML = `
      <h2 class="text-xl font-semibold text-[#202235]">${summary.headline}</h2>
      <p class="text-slate-600">Featured book</p>
      <article class="border border-slate-200 rounded-xl p-4 bg-gradient-to-b from-white to-slate-50">
        <h3 class="text-lg font-semibold text-[#202235]">${summary.featured.title}</h3>
        <p class="text-slate-600 mt-1">${summary.featured.author} • ${summary.featured.year}</p>
        <p class="text-[#202235] text-sm mt-1">${summary.featured.tags.join(' · ')}</p>
      </article>
    `

    books.innerHTML = bookList
      .map(
        (book) => `
          <article class="border border-slate-200 rounded-xl p-4 bg-gradient-to-b from-white to-slate-50 shadow-sm">
            <h3 class="text-lg font-semibold text-[#202235]">${book.title}</h3>
            <p class="text-slate-600 mt-1">${book.author} • ${book.year}</p>
            <p class="text-[#202235] text-sm mt-1">${book.tags.join(' · ')}</p>
          </article>
        `,
      )
      .join('')

    showView('overview')
  }

  function showView(view) {
    overview.classList.toggle('hidden', view !== 'overview')
    books.classList.toggle('hidden', view !== 'books')
    tabButtons.forEach((btn) => {
      const active = btn.dataset.view === view
      btn.className = `px-4 py-2 rounded-full text-sm font-semibold transition ${active ? 'bg-white shadow text-[#202235]' : 'text-slate-600'}`
    })
  }

  tabButtons.forEach((btn) =>
    btn.addEventListener('click', () => {
      showView(btn.dataset.view)
    }),
  )

  loadData().catch((err) => {
    console.error('Failed to load data:', err)
    // Show error UI so users know something went wrong
    overview.innerHTML = `
      <div class="text-red-600 p-4 bg-red-50 rounded-lg border border-red-200">
        <h3 class="font-semibold">Failed to load data</h3>
        <p class="text-sm mt-1">${err.message || 'Check that the Litestar server is running.'}</p>
      </div>
    `
    overview.classList.remove('hidden')
  })
</script>
