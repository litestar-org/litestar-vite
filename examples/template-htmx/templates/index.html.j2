{% extends "base.html.j2" %}

{% block content %}
<main class="mx-auto max-w-5xl space-y-6 px-4 py-10" x-data="{ view: 'overview' }" hx-boost="true">
  <header class="space-y-2">
    <p class="text-sm font-semibold uppercase tracking-[0.14em] text-[#edb641]">Litestar · Vite</p>
    <h1 class="text-3xl font-semibold text-[#202235]">Library (HTMX)</h1>
    <p class="text-slate-600">Progressive enhancement using the same backend payloads.</p>
    <div class="inline-flex gap-2 rounded-full bg-slate-100 p-1 shadow-sm" role="tablist">
      <button
        class="rounded-full px-4 py-2 text-sm font-semibold transition"
        :class="view === 'overview' ? 'bg-white shadow text-[#202235]' : 'text-slate-600'"
        @click="view = 'overview'"
        type="button"
      >Overview</button>
      <button
        class="rounded-full px-4 py-2 text-sm font-semibold transition"
        :class="view === 'books' ? 'bg-white shadow text-[#202235]' : 'text-slate-600'"
        @click="view = 'books'"
        type="button"
      >Books ({{ summary.total_books }})</button>
    </div>
  </header>

  <section x-show="view === 'overview'" class="space-y-4 rounded-2xl border border-slate-200 bg-white p-6 shadow-lg shadow-slate-200/40">
    <h2 class="text-xl font-semibold text-[#202235]">{{ summary.headline }}</h2>
    <p class="text-slate-600">Featured book</p>
    <section
      id="book-detail"
      class="rounded-xl border border-slate-200 bg-gradient-to-b from-white to-slate-50 p-4 shadow-sm"
      hx-get="/fragments/book/{{ summary.featured.id }}"
      hx-trigger="load"
    >
      {% include "partials/book_card.html.j2" with book=summary.featured %}
    </section>
  </section>

  <section x-show="view === 'books'" class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3" aria-label="Books">
    {% for book in books %}
    <article class="space-y-2 rounded-xl border border-slate-200 bg-gradient-to-b from-white to-slate-50 p-4 shadow-sm">
      <h3 class="text-lg font-semibold text-[#202235]">{{ book.title }}</h3>
      <p class="mt-1 text-slate-600">{{ book.author }} • {{ book.year }}</p>
      <p class="mt-1 text-sm text-[#202235]">{{ book.tags | join(' · ') }}</p>
      <button
        class="inline-flex items-center gap-2 rounded-lg bg-slate-900 px-3 py-2 text-sm font-semibold text-white shadow hover:bg-slate-800"
        hx-get="/fragments/book/{{ book.id }}"
        hx-target="#book-detail"
        hx-swap="innerHTML"
      >
        Preview in overview
      </button>
    </article>
    {% endfor %}
  </section>
</main>
{% endblock %}
